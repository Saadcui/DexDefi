  "description": "",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "concurrently": "^9.2.1",
    "dotenv": "^16.3.1",
    "hardhat": "^2.28.0",
    "wait-on": "^8.0.5"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.3",
    "ethers": "^6.16.0"
  }
  
}
